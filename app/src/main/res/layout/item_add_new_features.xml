<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/box1border"
    android:padding="8dp">

    <View
        android:id="@+id/view"
        android:layout_width="60dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:background="@drawable/box_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_medium"
            android:gravity="center"
            android:text="@string/add_new_features"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size4" />

        <EditText
            android:id="@+id/newPropertyFeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/add_imag_border"
            android:fontFamily="@font/cairo_regular"
            android:gravity="start"
            android:padding="8dp"
            android:hint="@string/new_property_feature"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addFeatureBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shap"
            android:text="@string/add"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size6"
            android:textStyle="bold"
            android:layout_margin="@dimen/_30sdp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>